<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainClockLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:orientation="horizontal"
    >


    <TextView android:id="@+id/clockWhiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginTop="0dp"
        android:layout_marginStart="3dp"
        android:layout_gravity="center"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        />


    <ImageButton android:id="@+id/clockStartPauseButton"
        style="@style/ButtonClockStyle"
        android:src="@drawable/ic_alarm"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        />


    <TextView android:id="@+id/clockBlackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginTop="0dp"
        android:layout_marginStart="3dp"
        android:layout_gravity="center"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        />

    <ImageButton android:id="@+id/clockEditButton"
        style="@style/ButtonClockStyle"
        android:src="@drawable/ic_alarm_add"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        />

</LinearLayout>



