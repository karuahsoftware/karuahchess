<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainScroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:padding="15dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragmentIcon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_alarm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp"
            />

        <TextView android:id="@+id/fragmentTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clock (HH:MM:SS)"
            app:layout_constraintTop_toTopOf="@id/fragmentIcon"
            app:layout_constraintBottom_toBottomOf="@id/fragmentIcon"
            app:layout_constraintStart_toEndOf="@id/fragmentIcon"
            android:layout_marginTop="0dp"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/headingBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="fragmentIcon,fragmentTitleText"
            />

        <TextView android:id="@+id/whiteTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="White remaining"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/headingBarrier"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            />


        <Spinner
            android:id="@+id/whiteTimeHourSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:popupElevation="3dp"
            android:spinnerMode="dropdown"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/whiteTitleText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bordergreen"
            android:padding="10dp"
            android:dropDownWidth="60dp"
            />

        <Spinner
            android:id="@+id/whiteTimeMinuteSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:popupElevation="3dp"
            android:spinnerMode="dropdown"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/whiteTitleText"
            app:layout_constraintStart_toEndOf="@id/whiteTimeHourSpinner"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bordergreen"
            android:padding="10dp"
            android:dropDownWidth="60dp"
            />

        <Spinner
            android:id="@+id/whiteTimeSecondSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:popupElevation="3dp"
            android:spinnerMode="dropdown"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/whiteTitleText"
            app:layout_constraintStart_toEndOf="@id/whiteTimeMinuteSpinner"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bordergreen"
            android:padding="10dp"
            android:dropDownWidth="60dp"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/whiteBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="whiteTimeHourSpinner,whiteTimeMinuteSpinner,whiteTimeSecondSpinner"
            />

        <TextView android:id="@+id/blackTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black remaining"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/whiteBarrier"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            />

        <Spinner
            android:id="@+id/blackTimeHourSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:popupElevation="3dp"
            android:spinnerMode="dropdown"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/blackTitleText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bordergreen"
            android:padding="10dp"
            android:dropDownWidth="60dp"
            />

        <Spinner
            android:id="@+id/blackTimeMinuteSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:popupElevation="3dp"
            android:spinnerMode="dropdown"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/blackTitleText"
            app:layout_constraintStart_toEndOf="@id/blackTimeHourSpinner"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bordergreen"
            android:padding="10dp"
            android:dropDownWidth="60dp"
            />

        <Spinner
            android:id="@+id/blackTimeSecondSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:popupElevation="3dp"
            android:spinnerMode="dropdown"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/blackTitleText"
            app:layout_constraintStart_toEndOf="@id/blackTimeMinuteSpinner"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bordergreen"
            android:padding="10dp"
            android:dropDownWidth="60dp"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/blackBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:barrierMargin="10dp"
            app:constraint_referenced_ids="blackTimeHourSpinner,blackTimeMinuteSpinner,blackTimeSecondSpinner"
            />

        <TextView android:id="@+id/resetTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset clocks"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/blackBarrier"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            />

        <Spinner
            android:id="@+id/resetSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:popupElevation="3dp"
            android:spinnerMode="dropdown"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bordergreen"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/resetTitleText"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ButtonDialogStyle"
            android:text="Reset"
            app:layout_constraintTop_toBottomOf="@id/resetTitleText"
            app:layout_constraintStart_toEndOf="@id/resetSpinner"
            android:layout_marginLeft="6dp"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/resetBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:barrierMargin="10dp"
            app:constraint_referenced_ids="resetSpinner,resetButton"
            />


        <Button
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ButtonDialogStyle"
            android:text="Close"
            />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/buttonFlow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="closeButton"
            app:flow_horizontalBias="0"
            app:flow_horizontalGap="5dp"
            app:flow_horizontalStyle="packed"
            app:flow_verticalBias="0"
            app:flow_wrapMode="chain"
            app:layout_constraintTop_toBottomOf="@id/resetBarrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

