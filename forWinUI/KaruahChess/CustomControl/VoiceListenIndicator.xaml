<UserControl
    x:Class="KaruahChess.CustomControl.VoiceListenIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KaruahChess.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    d:DesignHeight="50"
    d:DesignWidth="50">
    
    <Border x:Name="VoiceIndicatorPanel" VerticalAlignment="Center" Margin="0" >
        <TextBlock x:Name="VoiceIndicatorText" Text="Listening" VerticalAlignment="Center" Margin="5,0,5,0">
            <TextBlock.Resources>
                <Storyboard x:Key="VoiceIndicatorFlashStoryboard">
                    <DoubleAnimation From="1" To="0.1" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="VoiceIndicatorText" Duration="0:0:0.6" RepeatBehavior="Forever" AutoReverse="True" >
                        <DoubleAnimation.EasingFunction>
                            <CircleEase EasingMode="EaseInOut" />
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </TextBlock.Resources>
        </TextBlock>
    </Border>
  
</UserControl>
