<UserControl
    x:Class="KaruahChess.CustomControl.MoveNavigator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KaruahChess.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary x:Name="CustomStyleDefaultResourceDictionary">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Common/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>           
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />            
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer x:Name="navigatorScoll" Grid.Row="0" Grid.Column="0" HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Visible" VerticalScrollMode="Disabled" VerticalScrollBarVisibility="Hidden" VerticalAlignment="Top" PreviewKeyDown="NavigatorScroll_PreviewKeyDown">
            <StackPanel x:Name="navigatorStack" Orientation="Horizontal" Margin="0,0,0,14"/>
        </ScrollViewer>             

        <StackPanel x:Name="navigatorNextStack" Orientation="Horizontal" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top">
            <Button x:Name="backButton" Style="{StaticResource ButtonNavControlStyle}" Content="&#xE76B;" FontFamily="Segoe MDL2 Assets" Click="BackBtn_Click" />
            <Button x:Name="forwardButton" Style="{StaticResource ButtonNavControlStyle}" Content="&#xE76C;" FontFamily="Segoe MDL2 Assets" Click="ForwardBtn_Click"  />
            <Button x:Name="viewPGNButton" Style="{StaticResource ButtonNavControlStyle}" Content="&#xF0E3;" FontFamily="Segoe MDL2 Assets" Click="ViewPGNBtn_Click"  />
        </StackPanel>
    </Grid>

</UserControl>
