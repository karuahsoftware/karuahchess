<Page
    x:Class="KaruahChess.CustomControl.ImportPGNDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid x:Name="PageGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
            <TextBlock x:Name="PageIcon" FontFamily="Segoe MDL2 Assets" Text="&#xE896;" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock  TextWrapping="WrapWholeWords" VerticalAlignment="Center" Text="Import PGN" Style="{StaticResource SubtitleTextBlockStyle}" />
        </StackPanel>

        <ScrollViewer x:Name="MainTextScrollViewer" Grid.Row="1" Grid.Column="0">
            <TextBox x:Name="ImportPGNTextBox" PlaceholderText="Paste portable game notation text to import here ..."  AcceptsReturn="True" TextWrapping="Wrap" MinHeight="100" HorizontalAlignment="Stretch" />
        </ScrollViewer>
        <TextBlock x:Name="ImportErrorText" TextWrapping="WrapWholeWords" FontWeight="Normal" VerticalAlignment="Center" Text="" Foreground="Red" Grid.Row="2" Grid.Column="0"/>
           
    </Grid>
</Page>
