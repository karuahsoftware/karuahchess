<Page
    x:Class="KaruahChess.CustomControl.CastlingRightsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Name="PageGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />            
        </Grid.RowDefinitions>

        <Image x:Name="KingImage" Grid.Row="0" Grid.Column="0"/>

        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1" Padding="0,5,0,0">
            <CheckBox x:Name="QueenSideCastleCheckBox" Content="Can Castle Queen side" />
            <CheckBox x:Name="KingSideCastleCheckBox" Content="Can Castle King side" />
        </StackPanel>
    </Grid>
</Page>
