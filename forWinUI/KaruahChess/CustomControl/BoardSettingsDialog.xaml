<Page
    x:Class="KaruahChess.CustomControl.BoardSettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:KaruahChess.Common">
    
    <Grid x:Name="PageGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
            <TextBlock x:Name="PageIcon" FontFamily="Segoe MDL2 Assets" Text="&#xE18A;" VerticalAlignment="Center" Margin="0,0,5,0" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock  TextWrapping="WrapWholeWords" VerticalAlignment="Center" Text="Board" Style="{StaticResource SubtitleTextBlockStyle}" />
        </StackPanel>

        <ScrollViewer x:Name="MainTextScrollViewer" Grid.Row="1" Grid.Column="0">
            <StackPanel Orientation="Vertical">
                <ComboBox x:Name="DarkSquareCombo" Header="Colour" Width="150" Margin="0,10,0,0" ItemsSource="{x:Bind darkSquareColourList}" SelectionChanged="DarkSquareCombo_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="common:ColourARGB">
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Width="25" Height="25" >
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="{x:Bind Path=GetColour()}"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock Margin="3,0,0,0" Text="{x:Bind Path=Text}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock x:Name="OrientationTitleText" Margin="0,10,0,0" HorizontalAlignment="Left">Orientation</TextBlock>
                <StackPanel Orientation="Horizontal">
                    <Border x:Name="orientationBorder">
                        <Image x:Name="orientationImage" Source="ms-appx:///Media/orientation.png" Width="80" Height="80" VerticalAlignment="Top"/>
                    </Border>
                    <Button x:Name="btnRotate" Margin="5,0,0,0" VerticalAlignment="Top" FontFamily="Segoe MDL2 Assets" Click="btnRotate_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7AD;" Style="{StaticResource TitleTextBlockStyle}"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
